package Lab21;

import java.util.Scanner;


public class Usage_of_Try_Catch_Finally {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scn = new Scanner(System.in);
		int nu ,de;
		float dre;
		char ch;
		do {
			try {
		System.out.println("Program to Perform Division \n");
		System.out.println("Enter the Numerator : \t");
		nu = scn.nextInt();
		 System.out.println("Enter the Denominator : \t");
		de = scn.nextInt();
		dre = nu/de;
		 System.out.println("The Result is : \t"+dre+"\n");
		 System.out.println("End of Operation");
		 
		}catch(ArithmeticException e) {
		System.out.println("opertion not possible");
		}
		System.out.println("Do you want to continue?(  Y/  N )");
		ch = scn.next().charAt(0);
		}while(ch =='y'||ch == 'Y');
		
	scn.close();
	}

}
